<h2>Edit {{movie.name}}</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
        <label>
            Title:
            <input type="text" name="title" value="{{movie.title}}">
        </label>
        <label>
            Genre:
            <input type="text" name="genre" value="{{movie.genre}}">
        </label>
        <label>
            Plot:
            <input type="text" name="plot" value="{{movie.plot}}">
        </label>
        <label>
            Celebrity
            <select name="celebrity" required>
            <option value="">Choose celebrity</option>
            {{#each celebrities}}
                {{#eq this.name ../movie.celebrity.name}}
                <option value={{_id}} selected>{{name}}</option>
                {{else}}
                <option value={{_id}}>{{name}}</option>
                {{/eq}}
            {{/each}}
            </select>
        </label>
        <button type="submit">Edit</button>
</form>