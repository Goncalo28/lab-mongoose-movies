<h2>Create a movie</h2>

<form action="/movies/new" method="POST">
        <label>
            Title:
            <input type="text" name="title">
        </label>
        <label>
            Genre:
            <input type="text" name="genre">
        </label>
        <label>
            Plot:
            <input type="text" name="plot">
        </label>
        <label>
            Celebrity
            <select name="celebrity" required>
            <option value="">Choose celebrity</option>
            {{#each celebrities}}
                <option value={{_id}}>{{name}}</option>
            {{/each}}
            </select>
        </label>
        <button type="submit">Create</button>
</form>