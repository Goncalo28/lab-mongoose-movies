<h2>Movies</h2>
{{#each movies}}
    <p>{{title}}</p>
    <a href="/movies/{{_id}}">Details</a>
    <a href="/movies/new">Create a movie</a>
    <a href="/movies/{{_id}}/edit">Edit</a>
    <form action="movies/{{_id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>
{{/each}}
